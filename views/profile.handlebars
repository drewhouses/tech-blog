<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new Blog Post:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="project-name">Post Title</label>
        <input class="form-input" type="text" id="post-title" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-funding">Post Body:</label>
        <input class="form-input" type="text" id="post-content" name="project-funding" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

<script src="./js/add-blogpost.js"></script>